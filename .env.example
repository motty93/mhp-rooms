# アプリケーション設定
PORT=8080
ENV=development

# サービスモード設定
SERVICE_MODE=main  # main: 通常モード, sse: SSE専用モード

# SSEサーバー設定（オプション）
# 空の場合は同一サーバーを使用
# SSE_HOST=https://sse-server.example.com

# データベース設定（Turso or PostgreSQL）
DB_TYPE=turso  # または postgres

# Turso設定（DB_TYPE=tursoの場合）
TURSO_DATABASE_URL="libsql://your-database.turso.io"
TURSO_AUTH_TOKEN="your-auth-token"

# PostgreSQL設定（DB_TYPE=postgresの場合）
DB_HOST=localhost
DB_PORT=5432
DB_USER=mhp_user
DB_PASSWORD=mhp_password
DB_NAME=mhp_rooms_dev
DB_SSLMODE=disable

# データベースURL（PostgreSQL用、上記設定と一致させる）
DATABASE_URL="postgres://mhp_user:mhp_password@localhost:5432/mhp_rooms_dev?sslmode=disable"

# ログレベル
LOG_LEVEL=debug

# デバッグ設定
DEBUG_SQL_LOGS=true

# Supabase設定
SUPABASE_URL="https://xxxxxxxxxxxxxxxxxxxx.supabase.co"
SUPABASE_ANON_KEY="eyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
SUPABASE_JWT_SECRET="CX/xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Google Cloud Storage設定
# パブリックバケット（アバター画像用）
GCS_BUCKET="your-public-bucket-name"
BASE_PUBLIC_ASSET_URL="https://storage.googleapis.com/your-public-bucket-name"
ASSET_PREFIX="dev"

# プライベートバケット（通報画像用）
GCS_PRIVATE_BUCKET="your-private-bucket-name"

# GCSアップロード制限設定（オプション）
MAX_UPLOAD_BYTES="10485760"
ALLOW_CONTENT_TYPES="image/jpeg,image/png,image/webp"

# discord webhook url
DISCORD_WEBHOOK_URL=""

# OGP画像生成設定
# OGP_GENERATION_MODE: OGP画像生成の動作モード
#   - cloud: Cloud Run Jobsを使用（本番環境推奨）
#   - local: ローカルで直接実行（開発環境推奨）
#   - skip: OGP画像生成をスキップ
# 未設定の場合は自動判定（PROJECT_IDがあればcloud、なければlocal）
OGP_GENERATION_MODE=local

# Cloud Run Jobs設定（本番環境用、OGP_GENERATION_MODE=cloudの場合に必要）
# PROJECT_ID=your-gcp-project-id  # オプション: 未設定の場合はメタデータサーバーから自動取得
# LOCATION=asia-northeast1        # オプション: 未設定の場合はメタデータサーバーから自動取得
# OGP_JOB_NAME=ogp-renderer       # 必須: Cloud Run Job名

# OGP画像保存先設定
# OG_BUCKET: GCSバケット名（本番環境用）
# OG_PREFIX: 環境プレフィックス（dev/stg/prod）
# OG_BUCKET=your-ogp-bucket
OG_PREFIX=dev
