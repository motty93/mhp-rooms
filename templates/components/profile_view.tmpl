{{ define "profile_view" }}
  <div class="flex flex-col items-center">
    <div class="relative">
      <img
        class="w-32 h-32 rounded-full mb-4 border-4 border-white object-cover shadow-sm"
        src="{{ if .User.AvatarURL }}
          {{ stringPtr .User.AvatarURL }}
        {{ else }}
          /static/images/default-avatar.png
        {{ end }}"
        alt="{{ .User.DisplayName }}のアバター"
      />
      <span
        class="absolute bottom-4 right-2 bg-green-500 w-5 h-5 rounded-full border-2 border-white"
        title="オンライン"
      ></span>
    </div>
    <h2 class="text-2xl font-bold text-gray-800">{{ .User.DisplayName }}</h2>
    {{ if .User.Username }}
      <p class="text-sm text-gray-500 mb-2">@{{ .User.Username }}</p>
    {{ end }}
    <p class="text-sm text-gray-500 mb-4">フォロワー: {{ .FollowerCount }}人</p>
    {{ if hasStringValue .User.Bio }}
      <p class="text-center text-gray-600 mb-6 text-sm">
        {{ stringPtr .User.Bio }}
      </p>
    {{ end }}
    <div class="w-full space-y-3 text-sm mb-6">
      {{ if gt (len .FavoriteGames) 0 }}
        <div class="flex items-center text-gray-500">
          <i class="fa-solid fa-gamepad w-5 mr-2 text-gray-400"></i>
          主なゲーム:
          {{ range $index, $game := .FavoriteGames }}
            {{ if $index }},{{ end }}{{ $game }}
          {{ end }}
        </div>
      {{ end }}
      {{ if or .PlayTimes.Weekday .PlayTimes.Weekend }}
        <div class="flex items-center text-gray-500">
          <i class="fa-solid fa-clock w-5 mr-2 text-gray-400"></i>
          プレイ時間帯:
          {{ if .PlayTimes.Weekday }}
            平日
            {{ .PlayTimes.Weekday }}
          {{ end }}{{ if and .PlayTimes.Weekday .PlayTimes.Weekend }}
            ,
          {{ end }}{{ if .PlayTimes.Weekend }}
            休日
            {{ .PlayTimes.Weekend }}
          {{ end }}
        </div>
      {{ end }}
      {{ if hasStringValue .User.PSNOnlineID }}
        <div class="flex items-center text-gray-500">
          <i class="fa-brands fa-playstation w-5 mr-2 text-blue-600"></i>
          PSN ID:
          {{ stringPtr .User.PSNOnlineID }}
        </div>
      {{ end }}
      {{ if hasStringValue .User.NintendoNetworkID }}
        <div class="flex items-center text-gray-500">
          <i class="fa-solid fa-gamepad w-5 mr-2 text-red-600"></i>
          Nintendo Network ID:
          {{ stringPtr .User.NintendoNetworkID }}
        </div>
      {{ end }}
      {{ if hasStringValue .User.NintendoSwitchID }}
        <div class="flex items-center text-gray-500">
          <i class="fa-solid fa-gamepad w-5 mr-2 text-red-600"></i>
          Nintendo Switch ID:
          {{ stringPtr .User.NintendoSwitchID }}
        </div>
      {{ end }}
      {{ if hasStringValue .User.TwitterID }}
        <div class="flex items-center text-gray-500">
          <i class="fa-brands fa-twitter w-5 mr-2 text-blue-400"></i>
          Twitter:
          @{{ stringPtr .User.TwitterID }}
        </div>
      {{ end }}
    </div>
    <button
      hx-get="/profile/edit"
      hx-target="#profile-card-content"
      hx-swap="innerHTML"
      class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2.5 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center space-x-2"
    >
      <i class="fa-solid fa-pencil"></i>
      <span>プロフィールを編集</span>
    </button>
  </div>
{{ end }}
