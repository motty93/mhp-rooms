<!-- SNS共有モーダル（PC用） -->
<div
  x-show="showShareModal"
  x-cloak
  class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4"
  x-transition:enter="transition ease-out duration-300"
  x-transition:enter-start="opacity-0"
  x-transition:enter-end="opacity-100"
  x-transition:leave="transition ease-in duration-200"
  x-transition:leave-start="opacity-100"
  x-transition:leave-end="opacity-0"
  @click.self="closeShareModal()"
>
  <div
    class="bg-white rounded-lg max-w-md w-full"
    @click.stop=""
    x-transition:enter="transition ease-out duration-300 delay-75"
    x-transition:enter-start="opacity-0 transform scale-95"
    x-transition:enter-end="opacity-100 transform scale-100"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100 transform scale-100"
    x-transition:leave-end="opacity-0 transform scale-95"
  >
    <!-- モーダルヘッダー -->
    <div class="p-6 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-bold text-gray-800">共有する</h2>
        <button
          @click="closeShareModal()"
          class="text-gray-400 hover:text-gray-600 transition-colors"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"
            />
          </svg>
        </button>
      </div>
    </div>

    <!-- モーダル内容 -->
    <div class="p-6">
      <ul class="space-y-3">
        <!-- X (旧Twitter) -->
        <li>
          <a
            :href="shareLinks.x"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center space-x-2 w-full px-4 py-3 bg-black hover:bg-gray-800 text-white rounded-lg font-bold text-base transition-all hover:scale-105 active:scale-98"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
              />
            </svg>
            <span>Xで共有</span>
          </a>
        </li>

        <!-- Facebook -->
        <li>
          <a
            :href="shareLinks.facebook"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center space-x-2 w-full px-4 py-3 bg-[#1877F2] hover:bg-[#1666D9] text-white rounded-lg font-bold text-base transition-all hover:scale-105 active:scale-98"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              />
            </svg>
            <span>Facebookで共有</span>
          </a>
        </li>

        <!-- Bluesky -->
        <li>
          <a
            :href="shareLinks.bluesky"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center space-x-2 w-full px-4 py-3 bg-[#0070FF] hover:bg-[#0060E6] text-white rounded-lg font-bold text-base transition-all hover:scale-105 active:scale-98"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 10.8c-1.087-2.114-4.046-6.053-6.798-7.995C2.566.944 1.561 1.266.902 1.565.139 1.908 0 3.08 0 3.768c0 .69.378 5.65.624 6.479.815 2.736 3.713 3.66 6.383 3.364.136-.02.275-.039.415-.056-.138.022-.276.04-.415.056-3.912.58-7.387 2.005-2.83 7.078 5.013 5.19 6.87-1.113 7.823-4.308.953 3.195 2.05 9.271 7.733 4.308 4.267-4.308 1.172-6.498-2.74-7.078a8.741 8.741 0 0 1-.415-.056c.14.017.279.036.415.056 2.67.297 5.568-.628 6.383-3.364.246-.828.624-5.79.624-6.478 0-.69-.139-1.861-.902-2.206-.659-.298-1.664-.62-4.3 1.24C16.046 4.748 13.087 8.687 12 10.8Z"
              />
            </svg>
            <span>Blueskyで共有</span>
          </a>
        </li>

        <!-- Discord（コピー） -->
        <li>
          <button
            @click="copyForDiscord()"
            class="flex items-center justify-center space-x-2 w-full px-4 py-3 bg-[#5865F2] hover:bg-[#4752C4] text-white rounded-lg font-bold text-base transition-all hover:scale-105 active:scale-98"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"
              />
            </svg>
            <span>Discordで共有 (コピー)</span>
          </button>
        </li>
      </ul>

      <!-- URLコピーエリア -->
      <div class="mt-6">
        <label class="block text-sm font-medium text-gray-700 mb-2">
          URL
        </label>
        <div class="flex">
          <input
            type="text"
            :value="shareData.url"
            readonly
            class="flex-1 px-3 py-2 border border-gray-300 rounded-l-lg bg-gray-50 text-gray-600 text-sm focus:outline-none"
          />
          <button
            @click="copyUrl()"
            class="px-4 py-2 border border-l-0 border-[#007bff] bg-[#007bff] hover:bg-[#0056b3] text-white font-bold rounded-r-lg transition-colors"
          >
            コピー
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
