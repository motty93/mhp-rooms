{{ define "header" }}
  {{ if .StaticPage }}
    <header
      class="fixed top-0 left-0 right-0 z-50 fixed-header border-b border-gray-200 bg-white"
    >
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <a href="/" class="flex items-center space-x-3">
            <img
              src="/static/images/icon.webp"
              alt="HuntersHub"
              class="w-12 h-12"
            />
            <h1 class="text-2xl font-bold text-gray-800">HuntersHub</h1>
          </a>
          <div class="hidden md:flex items-center gap-3">
            <a
              href="/auth/login"
              class="text-gray-700 hover:text-gray-900 font-medium transition-colors px-3 py-2 rounded-md hover:bg-gray-100"
            >
              ログイン
            </a>
            <a
              href="/auth/register"
              class="bg-gray-800 hover:bg-gray-900 text-white font-medium py-2 px-4 rounded-md transition-colors"
            >
              新規登録
            </a>
          </div>
          <div class="md:hidden">
            <button
              type="button"
              aria-label="メニュー"
              class="p-2 rounded-md border border-gray-200 text-gray-700"
              data-static-menu-toggle
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>
      <div class="md:hidden" data-static-menu-root>
        <div
          class="fixed inset-0 bg-black bg-opacity-50 z-[9998] opacity-0 pointer-events-none transition-opacity duration-300"
          data-static-menu-overlay
        ></div>
        <div
          class="fixed top-0 right-0 h-screen w-80 bg-white shadow-lg z-[9999] overflow-y-auto transform translate-x-full transition-transform duration-300"
          data-static-menu-panel
        >
          <div class="flex items-center justify-between p-6 border-b border-gray-200">
            <div class="flex items-center space-x-3">
              <img src="/static/images/icon.webp" alt="HuntersHub" class="w-8 h-8" />
              <h2 class="text-xl font-bold text-gray-800">HuntersHub</h2>
            </div>
            <button type="button" class="text-gray-500 hover:text-gray-700" data-static-menu-close>
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
          <div class="p-6 space-y-4">
            <a
              href="/auth/login"
              class="block w-full text-center bg-white border border-gray-300 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-50 transition-colors"
              data-static-menu-link
            >
              ログイン
            </a>
            <a
              href="/auth/register"
              class="block w-full text-center bg-gray-800 text-white py-3 px-4 rounded-lg font-medium hover:bg-gray-900 transition-colors"
              data-static-menu-link
            >
              新規登録
            </a>
            <a
              href="/rooms"
              class="block w-full text-center text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-100 transition-colors"
              data-static-menu-link
            >
              部屋一覧
            </a>
          </div>
        </div>
      </div>
      <script>
        document.addEventListener('DOMContentLoaded', () => {
          const root = document.querySelector('[data-static-menu-root]')
          const toggle = document.querySelector('[data-static-menu-toggle]')
          const overlay = document.querySelector('[data-static-menu-overlay]')
          const panel = document.querySelector('[data-static-menu-panel]')
          const closeBtn = document.querySelector('[data-static-menu-close]')
          const links = document.querySelectorAll('[data-static-menu-link]')

          if (!root || !toggle || !overlay || !panel || !closeBtn) {
            return
          }

          const openMenu = () => {
            overlay.classList.remove('pointer-events-none', 'opacity-0')
            overlay.classList.add('opacity-100')
            panel.classList.remove('translate-x-full')
          }

          const closeMenu = () => {
            overlay.classList.add('pointer-events-none', 'opacity-0')
            overlay.classList.remove('opacity-100')
            panel.classList.add('translate-x-full')
          }

          toggle.addEventListener('click', () => {
            const isHidden = panel.classList.contains('translate-x-full')
            isHidden ? openMenu() : closeMenu()
          })

          closeBtn.addEventListener('click', closeMenu)
          overlay.addEventListener('click', closeMenu)
          links.forEach((link) => {
            link.addEventListener('click', closeMenu)
          })
        })
      </script>
    </header>
  {{ else }}
    <header
      class="fixed top-0 left-0 right-0 z-50 fixed-header border-b border-gray-200"
    >
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center align-middle space-x-3">
            <a href="/" class="flex items-center space-x-3">
              <img
                src="/static/images/icon.webp"
                alt="HuntersHub"
                class="w-12 h-12"
              />
              <h1 class="text-2xl font-bold text-gray-800">HuntersHub</h1>
            </a>
          </div>

          <div class="flex items-center space-x-6">
            <!-- 認証コントロール -->
            <div
              class="auth-controls-wrapper"
              :class="{ 'loaded': !$store.auth.loading }"
            >
              <!-- 認証状態確認中のローディング表示 (スケルトン) -->
              <div
                class="hidden md:flex items-center gap-3"
                x-show="$store.auth.loading || !$store.auth.initialized"
                x-cloak
              >
                <div class="animate-pulse flex items-center space-x-2">
                  <div class="h-8 w-20 bg-gray-200 rounded"></div>
                  <div class="h-8 w-24 bg-gray-200 rounded"></div>
                </div>
              </div>

              <!-- 未認証時のボタン（デスクトップのみ） -->
              <div
                class="hidden md:flex items-center gap-3"
                x-show="$store.auth.initialized && !$store.auth.loading && !$store.auth.isAuthenticated"
                x-cloak
              >
                <a
                  href="/auth/login"
                  class="text-gray-700 hover:text-gray-900 font-medium transition-colors px-3 py-2 rounded-md hover:bg-gray-100"
                >
                  ログイン
                </a>
                <a
                  href="/auth/register"
                  class="bg-gray-800 hover:bg-gray-900 text-white font-medium py-2 px-4 rounded-md transition-colors"
                >
                  新規登録
                </a>
              </div>

              <!-- 認証済み時のユーザーメニュー -->
              <div
                class="relative hidden md:block"
                x-show="$store.auth.initialized && !$store.auth.loading && $store.auth.isAuthenticated"
                x-data="{
                  open: false,
                  isRoomsPage: window.location.pathname === '/rooms',
                  isProfilePage: window.location.pathname === '/profile',
                }"
                x-cloak
              >
                <button
                  @click="open = !open"
                  class="flex items-center gap-2 text-gray-700 hover:text-gray-900 transition-colors p-2 rounded-md hover:bg-gray-100"
                >
                  <img
                    :src="$store.auth.avatarUrl"
                    class="w-8 h-8 rounded-full object-cover"
                    alt="ユーザーアバター"
                  />
                  <span
                    class="font-medium hidden sm:block"
                    x-text="$store.auth.displayName || $store.auth.username"
                  ></span>
                  <svg
                    class="w-4 h-4 transition-transform"
                    :class="open ? 'rotate-180' : ''"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </button>

                <div
                  x-show="open"
                  @click.away="open = false"
                  x-transition:enter="transition ease-out duration-100"
                  x-transition:enter-start="transform opacity-0 scale-95"
                  x-transition:enter-end="transform opacity-100 scale-100"
                  x-transition:leave="transition ease-in duration-75"
                  x-transition:leave-start="transform opacity-100 scale-100"
                  x-transition:leave-end="transform opacity-0 scale-95"
                  class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 border border-gray-200"
                >
                  <!-- 参加中の部屋 -->
                  <template x-if="$store.auth.currentRoom">
                    <a
                      :href="'/rooms/' + $store.auth.currentRoom.id"
                      class="block px-4 py-2 text-sm text-blue-600 hover:bg-blue-50 transition-colors border-l-2 border-blue-500"
                      @click="open = false"
                    >
                      <div class="flex items-center space-x-2">
                        <svg
                          class="w-4 h-4"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        <span x-text="$store.auth.currentRoom.name"></span>
                      </div>
                    </a>
                  </template>
                  <a
                    :href="isRoomsPage ? '#' : '/rooms'"
                    @click="isRoomsPage && $event.preventDefault()"
                    class="block px-4 py-2 text-sm transition-colors rounded-md"
                    :class="isRoomsPage ? 'text-gray-900 font-semibold cursor-default' : 'text-gray-700 hover:bg-gray-100'"
                  >
                    部屋一覧
                  </a>
                  <button
                    @click="$store.roomCreate.open(); open = false;"
                    class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors"
                  >
                    部屋作成
                  </button>
                  <hr class="my-1 border-gray-200" />
                  <a
                    :href="isProfilePage ? '#' : '/profile'"
                    @click="isProfilePage && $event.preventDefault()"
                    class="block px-4 py-2 text-sm transition-colors rounded-md"
                    :class="isProfilePage ? 'text-gray-900 font-semibold cursor-default' : 'text-gray-700 hover:bg-gray-100'"
                  >
                    プロフィール
                  </a>
                  <hr class="my-1 border-gray-200" />
                  <button
                    @click="if(confirm('ログアウトしますか？')) { $store.auth.signOut(); open = false; }"
                    class="block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-gray-100 transition-colors"
                  >
                    ログアウト
                  </button>
                </div>
              </div>
            </div>

            <!-- モバイルハンバーガーボタン -->
            <div class="md:hidden">
              <button
                @click="$store.mobileMenu.toggle()"
                class="text-gray-600 hover:text-gray-800 p-2 relative z-[10000]"
              >
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16M4 18h16"
                  ></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </header>
  {{ end }}
