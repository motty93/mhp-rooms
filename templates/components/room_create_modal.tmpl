{{ define "room-create-modal" }}
<!-- 部屋作成モーダル -->
<div
  x-data="roomCreateModal()"
  x-show="showModal"
  x-cloak
  @keydown.escape="handleEscape"
  class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4"
>
  <!-- モーダルコンテンツ -->
  <div
    x-show="showModal"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0 scale-95"
    x-transition:enter-end="opacity-100 scale-100"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100 scale-100"
    x-transition:leave-end="opacity-0 scale-95"
    @click.stop
    class="bg-white rounded-lg shadow-xl w-full max-w-md max-h-screen overflow-y-auto"
  >
    <!-- ヘッダー -->
    <div class="flex items-center justify-between p-6 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">新しい部屋を作る</h2>
      <button
        @click="closeModal"
        class="text-gray-400 hover:text-gray-500 focus:outline-none"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- フォーム -->
    <form @submit.prevent="submitForm" class="p-6 space-y-4">
      <!-- 部屋名 -->
      <div>
        <label for="room-name" class="block text-sm font-medium text-gray-700 mb-1">
          部屋名 <span class="text-red-500">*</span>
        </label>
        <input
          id="room-name"
          type="text"
          x-model="formData.name"
          @input="validateField('name')"
          maxlength="50"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          :class="{ 'border-red-500': errors.name }"
          placeholder="部屋の名前を入力してください"
        />
        <div class="flex justify-between mt-1">
          <div x-show="errors.name" class="text-red-500 text-sm" x-text="errors.name"></div>
          <div class="text-gray-500 text-sm" x-text="`${formData.name.length}/50`"></div>
        </div>
      </div>

      <!-- ゲーム -->
      <div>
        <label for="game-version" class="block text-sm font-medium text-gray-700 mb-1">
          ゲーム <span class="text-red-500">*</span>
        </label>
        <select
          id="game-version"
          x-model="formData.gameVersionId"
          @change="validateField('gameVersionId')"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          :class="{ 'border-red-500': errors.gameVersionId }"
        >
          <option value="">ゲームを選択してください</option>
          <template x-for="version in gameVersions" :key="version.id">
            <option :value="version.id" x-text="version.name"></option>
          </template>
        </select>
        <div x-show="errors.gameVersionId" class="text-red-500 text-sm mt-1" x-text="errors.gameVersionId"></div>
      </div>

      <!-- 募集人数 -->
      <div>
        <label for="max-players" class="block text-sm font-medium text-gray-700 mb-1">
          募集人数 <span class="text-red-500">*</span>
        </label>
        <select
          id="max-players"
          x-model.number="formData.maxPlayers"
          @change="validateField('maxPlayers')"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          :class="{ 'border-red-500': errors.maxPlayers }"
        >
          <option value="">募集人数を選択してください</option>
          <option value="2">2人</option>
          <option value="3">3人</option>
          <option value="4">4人</option>
        </select>
        <div x-show="errors.maxPlayers" class="text-red-500 text-sm mt-1" x-text="errors.maxPlayers"></div>
      </div>

      <!-- パスワード -->
      <div>
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
          パスワード（任意）
        </label>
        <input
          id="password"
          type="password"
          x-model="formData.password"
          @input="validateField('password')"
          maxlength="20"
          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          :class="{ 'border-red-500': errors.password }"
          placeholder="パスワードを入力してください（任意）"
        />
        <div class="flex justify-between mt-1">
          <div x-show="errors.password" class="text-red-500 text-sm" x-text="errors.password"></div>
          <div class="text-gray-500 text-sm" x-text="`${formData.password.length}/20`"></div>
        </div>
      </div>

      <!-- ターゲットモンスター -->
      <div>
        <label for="target-monster" class="block text-sm font-medium text-gray-700 mb-1">
          ターゲットモンスター（任意）
        </label>
        <input
          id="target-monster"
          type="text"
          x-model="formData.targetMonster"
          @input="validateField('targetMonster')"
          maxlength="50"
          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          :class="{ 'border-red-500': errors.targetMonster }"
          placeholder="討伐予定のモンスターを入力してください（任意）"
        />
        <div class="flex justify-between mt-1">
          <div x-show="errors.targetMonster" class="text-red-500 text-sm" x-text="errors.targetMonster"></div>
          <div class="text-gray-500 text-sm" x-text="`${formData.targetMonster.length}/50`"></div>
        </div>
      </div>

      <!-- ランク条件 -->
      <div>
        <label for="rank-requirement" class="block text-sm font-medium text-gray-700 mb-1">
          ランク条件（任意）
        </label>
        <input
          id="rank-requirement"
          type="text"
          x-model="formData.rankRequirement"
          @input="validateField('rankRequirement')"
          maxlength="30"
          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          :class="{ 'border-red-500': errors.rankRequirement }"
          placeholder="参加条件（例：HR6以上、制限なし）を入力してください（任意）"
        />
        <div class="flex justify-between mt-1">
          <div x-show="errors.rankRequirement" class="text-red-500 text-sm" x-text="errors.rankRequirement"></div>
          <div class="text-gray-500 text-sm" x-text="`${formData.rankRequirement.length}/30`"></div>
        </div>
      </div>

      <!-- 説明 -->
      <div>
        <label for="description" class="block text-sm font-medium text-gray-700 mb-1">
          説明（任意）
        </label>
        <textarea
          id="description"
          x-model="formData.description"
          @input="validateField('description')"
          rows="3"
          maxlength="200"
          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          :class="{ 'border-red-500': errors.description }"
          placeholder="部屋の説明を入力してください（任意）"
        ></textarea>
        <div class="flex justify-between mt-1">
          <div x-show="errors.description" class="text-red-500 text-sm" x-text="errors.description"></div>
          <div class="text-gray-500 text-sm" x-text="`${formData.description.length}/200`"></div>
        </div>
      </div>

      <!-- アクションボタン -->
      <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
        <button
          type="button"
          @click="closeModal"
          class="px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-500"
        >
          キャンセル
        </button>
        <button
          type="submit"
          :disabled="!isFormValid || isSubmitting"
          :class="{
            'bg-gray-400 cursor-not-allowed': !isFormValid || isSubmitting,
            'bg-blue-600 hover:bg-blue-700': isFormValid && !isSubmitting
          }"
          class="px-4 py-2 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors"
        >
          <span x-show="!isSubmitting">部屋を作る</span>
          <span x-show="isSubmitting" class="flex items-center">
            <svg class="animate-spin -ml-1 mr-3 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            作成中...
          </span>
        </button>
      </div>
    </form>
  </div>

  <!-- バックドロップクリック用の透明エリア -->
  <div
    @click="handleBackdropClick"
    class="absolute inset-0 -z-10"
  ></div>
</div>
{{ end }}