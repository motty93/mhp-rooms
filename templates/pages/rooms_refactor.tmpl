          <div>
            <label for="create-room-name" class="block text-sm font-medium text-gray-700 mb-1">
              部屋名 <span class="text-red-500">*</span>
            </label>
            <input
              id="create-room-name"
              type="text"
              x-model="createFormData.name"
              maxlength="50"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              :class="{ 'border-red-500': createFormErrors.name }"
              placeholder="部屋の名前を入力してください"
            />
            <div class="flex justify-between mt-1">
              <div x-show="createFormErrors.name" class="text-red-500 text-sm" x-text="createFormErrors.name"></div>
              <div class="text-gray-500 text-sm" x-text="`${createFormData.name.length}/50`"></div>
            </div>
          </div>

          <!-- ゲーム -->
          <div>
            <label for="create-game-version" class="block text-sm font-medium text-gray-700 mb-1">
              ゲーム <span class="text-red-500">*</span>
            </label>
            <select
              id="create-game-version"
              x-model="createFormData.gameVersionId"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              :class="{ 'border-red-500': createFormErrors.gameVersionId }"
            >
              <option value="">ゲームを選択してください</option>
              <template x-for="version in gameVersions" :key="version.id">
                <option :value="version.id" x-text="version.name"></option>
              </template>
            </select>
            <div x-show="createFormErrors.gameVersionId" class="text-red-500 text-sm mt-1" x-text="createFormErrors.gameVersionId"></div>
          </div>

          <!-- 募集人数 -->
          <div>
            <label for="create-max-players" class="block text-sm font-medium text-gray-700 mb-1">
              募集人数 <span class="text-red-500">*</span>
            </label>
            <select
              id="create-max-players"
              x-model.number="createFormData.maxPlayers"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              :class="{ 'border-red-500': createFormErrors.maxPlayers }"
            >
              <option value="">募集人数を選択してください</option>
              <option value="2">2人</option>
              <option value="3">3人</option>
              <option value="4">4人</option>
            </select>
            <div x-show="createFormErrors.maxPlayers" class="text-red-500 text-sm mt-1" x-text="createFormErrors.maxPlayers"></div>
          </div>

          <!-- パスワード -->
          <div>
            <label for="create-password" class="block text-sm font-medium text-gray-700 mb-1">
              パスワード（任意）
            </label>
            <input
              id="create-password"
              type="password"
              x-model="createFormData.password"
              maxlength="20"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              :class="{ 'border-red-500': createFormErrors.password }"
              placeholder="パスワードを入力してください（任意）"
            />
            <div class="flex justify-between mt-1">
              <div x-show="createFormErrors.password" class="text-red-500 text-sm" x-text="createFormErrors.password"></div>
              <div class="text-gray-500 text-sm" x-text="`${createFormData.password.length}/20`"></div>
            </div>
          </div>

          <!-- ターゲットモンスター -->
          <div>
            <label for="create-target-monster" class="block text-sm font-medium text-gray-700 mb-1">
              ターゲットモンスター（任意）
            </label>
            <input
              id="create-target-monster"
              type="text"
              x-model="createFormData.targetMonster"
              maxlength="50"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              :class="{ 'border-red-500': createFormErrors.targetMonster }"
              placeholder="討伐予定のモンスターを入力してください（任意）"
            />
            <div class="flex justify-between mt-1">
              <div x-show="createFormErrors.targetMonster" class="text-red-500 text-sm" x-text="createFormErrors.targetMonster"></div>
              <div class="text-gray-500 text-sm" x-text="`${createFormData.targetMonster.length}/50`"></div>
            </div>
          </div>

          <!-- ランク条件 -->
          <div>
            <label for="create-rank-requirement" class="block text-sm font-medium text-gray-700 mb-1">
              ランク条件（任意）
            </label>
            <input
              id="create-rank-requirement"
              type="text"
              x-model="createFormData.rankRequirement"
              maxlength="30"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              :class="{ 'border-red-500': createFormErrors.rankRequirement }"
              placeholder="参加条件（例：HR6以上、制限なし）を入力してください（任意）"
            />
            <div class="flex justify-between mt-1">
              <div x-show="createFormErrors.rankRequirement" class="text-red-500 text-sm" x-text="createFormErrors.rankRequirement"></div>
              <div class="text-gray-500 text-sm" x-text="`${createFormData.rankRequirement.length}/30`"></div>
            </div>
          </div>

          <!-- 説明 -->
          <div>
            <label for="create-description" class="block text-sm font-medium text-gray-700 mb-1">
              説明（任意）
            </label>
            <textarea
              id="create-description"
              x-model="createFormData.description"
              rows="3"
              maxlength="200"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              :class="{ 'border-red-500': createFormErrors.description }"
              placeholder="部屋の説明を入力してください（任意）"
            ></textarea>
            <div class="flex justify-between mt-1">
              <div x-show="createFormErrors.description" class="text-red-500 text-sm" x-text="createFormErrors.description"></div>
              <div class="text-gray-500 text-sm" x-text="`${createFormData.description.length}/200`"></div>
            </div>
          </div>

          <!-- アクションボタン -->
          <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
            <button
              type="button"
              @click="closeCreateModal"
              class="px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-500"
            >
              キャンセル
            </button>
            <button
              type="submit"
              :disabled="!isValidCreateForm || isSubmitting"
              :class="{
                'bg-gray-400 cursor-not-allowed': !isValidCreateForm || isSubmitting,
                'bg-gray-800 hover:bg-gray-900': isValidCreateForm && !isSubmitting
              }"
              class="px-4 py-2 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors"
            >
              <span x-show="!isSubmitting">部屋を作る</span>
              <span x-show="isSubmitting" class="flex items-center">
                <svg class="animate-spin -ml-1 mr-3 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                作成中...
              </span>
            </button>
          </div>
        </form>
      </div>

      <!-- バックドロップクリック用の透明エリア -->
      <div
        @click="closeCreateModal"
        class="absolute inset-0 -z-10"
      ></div>
    </div>

    <!-- ホスト中警告モーダル -->
    <div
