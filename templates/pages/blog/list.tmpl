{{ define "head" }}
<meta name="description" content="HuntersHub通信。モンハンポータブルシリーズに関する技術情報、コミュニティ情報、トラブルシューティングなどをお届けします。" />
<meta name="keywords" content="ブログ,HuntersHub通信,HuntersHub,ハンターズハブ,モンスターハンター,モンハン,XLink Kai,PSP配信,技術情報" />
<meta property="og:title" content="HuntersHub通信 - HuntersHub" />
<meta property="og:description" content="モンハンポータブルシリーズに関する技術情報やコミュニティ情報をお届けします" />
<link rel="alternate" type="application/rss+xml" title="HuntersHub ブログ" href="/blog-feed.xml" />
<link rel="alternate" type="application/atom+xml" title="HuntersHub ブログ" href="/blog-atom.xml" />
{{ end }}

{{ define "page" }}
<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <!-- ページヘッダー -->
    <div class="mb-12 text-center">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">HuntersHub通信</h1>
      <p class="text-gray-600 text-lg mb-6">
        モンスターハンターポータブルシリーズに関する技術情報、コミュニティ情報、<br />
        トラブルシューティングなど、HuntersHubからの情報をお届けします。
      </p>
      <div class="flex justify-center gap-2">
        <a href="/blog-feed.xml"
          class="inline-flex items-center px-3 py-1.5 text-xs text-gray-600 border border-gray-300 rounded hover:bg-gray-50 transition-colors">
          <svg class="w-3.5 h-3.5 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M5 3a1 1 0 000 2c5.523 0 10 4.477 10 10a1 1 0 102 0C17 8.373 11.627 3 5 3z"></path>
            <path
              d="M4 9a1 1 0 011-1 7 7 0 017 7 1 1 0 11-2 0 5 5 0 00-5-5 1 1 0 01-1-1zM3 15a2 2 0 114 0 2 2 0 01-4 0z">
            </path>
          </svg>
          RSS
        </a>
        <a href="/blog-atom.xml"
          class="inline-flex items-center px-3 py-1.5 text-xs text-gray-600 border border-gray-300 rounded hover:bg-gray-50 transition-colors">
          <svg class="w-3.5 h-3.5 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M5 3a1 1 0 000 2c5.523 0 10 4.477 10 10a1 1 0 102 0C17 8.373 11.627 3 5 3z"></path>
            <path
              d="M4 9a1 1 0 011-1 7 7 0 017 7 1 1 0 11-2 0 5 5 0 00-5-5 1 1 0 01-1-1zM3 15a2 2 0 114 0 2 2 0 01-4 0z">
            </path>
          </svg>
          Atom
        </a>
      </div>
    </div>

    <div x-data="{ category: '{{ .PageData.CurrentCategory }}' }">
      <!-- カテゴリータブ -->
      <div class="mb-8">
        <div
          class="flex justify-start md:justify-center gap-2 border-b border-gray-200 overflow-x-auto pb-px scrollbar-hide">
          <button @click="category = 'all'"
            :class="category === 'all' ? 'border-blue-600 text-blue-600' : 'border-transparent text-gray-600 hover:text-gray-800 hover:border-gray-300'"
            class="px-4 md:px-6 py-3 border-b-2 font-medium transition-colors whitespace-nowrap flex-shrink-0">
            すべて
          </button>
          <button @click="category = 'technical'"
            :class="category === 'technical' ? 'border-blue-600 text-blue-600' : 'border-transparent text-gray-600 hover:text-gray-800 hover:border-gray-300'"
            class="px-4 md:px-6 py-3 border-b-2 font-medium transition-colors whitespace-nowrap flex-shrink-0">
            技術情報
          </button>
          <button @click="category = 'community'"
            :class="category === 'community' ? 'border-blue-600 text-blue-600' : 'border-transparent text-gray-600 hover:text-gray-800 hover:border-gray-300'"
            class="px-4 md:px-6 py-3 border-b-2 font-medium transition-colors whitespace-nowrap flex-shrink-0">
            コミュニティ
          </button>
          <button @click="category = 'troubleshooting'"
            :class="category === 'troubleshooting' ? 'border-blue-600 text-blue-600' : 'border-transparent text-gray-600 hover:text-gray-800 hover:border-gray-300'"
            class="px-4 md:px-6 py-3 border-b-2 font-medium transition-colors whitespace-nowrap flex-shrink-0">
            トラブルシューティング
          </button>
        </div>
      </div>

      <!-- 記事一覧（2列グリッド） -->
      <div class="grid md:grid-cols-2 gap-3">
        {{ if .PageData.Articles }}
        {{ range .PageData.Articles }}
        <a href="/blog/{{ .Slug }}"
          class="group block bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-md transition-all duration-200 h-32"
          data-category="{{ .Category }}" x-show="category === 'all' || category === '{{ .Category }}'">
          <article class="flex h-full">
            <!-- サムネイル領域（横並び・小さめ） -->
            <div
              class="w-32 flex-shrink-0 {{ if .Images }}bg-gray-100{{ else }}bg-gradient-to-br {{ if eq .Category "technical" }}from-purple-100 to-purple-50{{ else if eq .Category "community" }}from-green-100 to-green-50{{ else if eq .Category "troubleshooting" }}from-red-100 to-red-50{{ else }}from-blue-100 to-blue-50{{ end }}{{ end }} flex items-center justify-center overflow-hidden">
              {{ if .Images }}
              <img src="{{ index .Images 0 }}" alt="{{ .Title }}" class="w-full h-full object-cover" />
              {{ else if eq .Category "technical" }}
              <svg class="w-10 h-10 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
              {{ else if eq .Category "community" }}
              <svg class="w-10 h-10 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z">
                </path>
              </svg>
              {{ else if eq .Category "troubleshooting" }}
              <svg class="w-10 h-10 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z">
                </path>
              </svg>
              {{ else }}
              <svg class="w-10 h-10 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                </path>
              </svg>
              {{ end }}
            </div>

            <!-- 記事情報 -->
            <div class="flex-1 p-3 flex flex-col justify-between min-w-0">
              <div class="min-w-0">
                <div class="flex items-center gap-2 mb-1.5">
                  {{ if eq .Category "technical" }}
                  <span
                    class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-700 flex-shrink-0">
                    技術情報
                  </span>
                  {{ else if eq .Category "community" }}
                  <span
                    class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-700 flex-shrink-0">
                    コミュニティ
                  </span>
                  {{ else if eq .Category "troubleshooting" }}
                  <span
                    class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-700 flex-shrink-0">
                    トラブルシューティング
                  </span>
                  {{ end }}
                </div>

                <h2
                  class="text-sm md:text-base font-bold text-gray-900 group-hover:text-blue-600 transition-colors line-clamp-2 leading-snug">
                  {{ .Title }}
                </h2>
              </div>

              <div class="flex items-center gap-2 text-xs text-gray-500 mt-1.5">
                <time datetime="{{ .Date.Format "2006-01-02" }}">
                  {{ .Date.Format "2006/1/2" }}
                </time>
                {{ if gt .ReadingTime 0 }}
                <span class="flex items-center">
                  <svg class="w-3 h-3 mr-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  約{{ .ReadingTime }}分
                </span>
                {{ end }}
              </div>
            </div>
          </article>
        </a>
        {{ end }}
        {{ else }}
        <div class="col-span-2 bg-blue-50 border border-blue-200 rounded-lg p-12 text-center">
          <p class="text-gray-600 text-lg">該当するブログ記事がありません。</p>
        </div>
        {{ end }}
      </div>
    </div>
  </div>
</div>
{{ end }}
